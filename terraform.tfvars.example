# =============================================================================
# このファイルを terraform.tfvars にコピーして値を設定してください
# cp terraform.tfvars.example terraform.tfvars
# =============================================================================

# General
project_name = "my-rails-app"
environment  = "dev"
aws_region   = "ap-northeast-1"

# VPC
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["ap-northeast-1a", "ap-northeast-1c"]

# ECS
ecs_task_cpu      = 256
ecs_task_memory   = 512
ecs_desired_count = 2
container_port    = 3000

# RDS
db_instance_class = "db.t3.micro"
db_name           = "myapp_development"
db_username       = "rails_user"
db_password       = "your-secure-password-here"  # 本番では AWS Secrets Manager を推奨

# S3 (グローバルでユニークな名前にする必要あり)
s3_bucket_name = "my-rails-app-storage-dev-123456"
